package Main;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;
import java.io.Serializable;

public class TV implements Constructor, Serializable {
	private static final long serialVersionUID = 1L; // ID cho Serializable
	private String brand;
	private int size;

	public TV(String brand, int size) {
		if (size <= 0) {
			throw new IllegalArgumentException("Kích thước TV phải lớn hơn 0.");
		}
		this.brand = brand;
		this.size = size;
	}

	public TV() {

	}

	// Getters
	public String getBrand() {
		return brand;
	}

	public int getSize() {
		return size;
	}

	public void setBrand(String brand) {
		this.brand = brand;
	}

	public void setSize(int size) {
		this.size = size;
	}

	// Hàm xuất thông tin
	public void displayInfo() {
		System.out.println("Thương hiệu: " + brand);
		System.out.println("Kích thước: " + size + " inch");
	}

	public void inputData() {
		Scanner scanner = new Scanner(System.in);
		System.out.print("Nhập thương hiệu: ");
		this.brand = scanner.nextLine();

		while (true) {
			try {
				System.out.print("Nhập kích thước: ");
				this.size = Integer.parseInt(scanner.nextLine());
				if (this.size <= 0) {
					throw new IllegalArgumentException("Kích thước phải lớn hơn 0.");
				}
				break; // Thoát vòng lặp nếu nhập hợp lệ
			} catch (NumberFormatException e) {
				System.out.println("Vui lòng nhập một số hợp lệ.");
			} catch (IllegalArgumentException e) {
				System.out.println(e.getMessage());
			}
		}
	}

	// Nhập dữ liệu từ tệp
	public void readFromFile(BufferedReader br) throws IOException {
		this.brand = br.readLine();
		this.size = Integer.parseInt(br.readLine());
	}

	// Xuất dữ liệu ra tệp văn bản
	public void writeToFile(PrintWriter pw) {
		pw.println(brand);
		pw.println(size);
	}

	@Override
	public void chaoNguoiDung() {
		// TODO Auto-generated method stub
		System.out.println("Chào mọi người");
	}
	
	public String toString() {
		return brand + "," + size;
	}
}