package Main;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

class LEDTV extends TV {
	
    private String displayType;

    // Hàm khởi tạo
    public LEDTV(String brand, int size, String displayType) {
        super(brand, size);
        this.displayType = displayType;
    }
    
    public LEDTV() {}

    // Getters và Setters
    public String getDisplayType() {
        return displayType;
    }

    public void setDisplayType(String displayType) {
        this.displayType = displayType;
    }
    
    //
    @Override
    public void inputData() {
    	super.inputData();
    	Scanner nhap = new Scanner(System.in);
    	System.out.print("Nhập loại màn hình của TV: ");
    	this.displayType = nhap.nextLine();
    }

    // Hàm xuất dữ liệu
    @Override
    public void displayInfo() {
        super.displayInfo();
        System.out.println("Display Type: " + displayType);
    }

    // Nhập dữ liệu từ tệp
    @Override
    public void readFromFile(BufferedReader br) throws IOException {
        super.readFromFile(br);
        this.displayType = br.readLine();
    }

    // Xuất dữ liệu ra tệp
    @Override
    public void writeToFile(PrintWriter pw) {
        super.writeToFile(pw);
        pw.println(displayType);
    }
    
    @Override
    public void chaoNguoiDung() {
    	super.chaoNguoiDung();
    	System.out.println("Tôi là 1 chiếc LEDTV");
    }
}